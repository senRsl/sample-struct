<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <include layout="@layout/layout_title" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_list_dog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/dog_title_list"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_list_dog_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/dog_title_list_wrapper"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_add_dog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/dog_title_add"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_display"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_crash"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/crash"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_hooks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hooks"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_ding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ding"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_tasks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tasks"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_swipe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/swipe_sample"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_permission"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/permission"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_permission_check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/permission_check"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_net_post_json"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/net_post_json"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_net_post"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/net_post"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_net_get"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/net_get"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_banner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/banner"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_click"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/click"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_click_single"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/click_single"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_call"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/call"
                android:textAllCaps="false" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>